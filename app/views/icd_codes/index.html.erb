<h1>Listing ICD Code</h1>

<div id="icd_codes"></div>
<script type="text/javascript" charset="utf-8">
  $("#icd_codes").jTable({
    width: '100%',
    serverSidePagination: true,
    singleColumnSearch: true,
    indexUrl: "/icd_codes.json",
    editUrl: "/icd_codes/:identifier/edit",
    destroyUrl: "/icd_codes/:identifier.js",
    columns: [
      {heading: 'Identifier', attribute: 'identifier', cloumnClass: 'center'},
      {heading: 'Short Description', attribute: 'short_description'},
      {heading: 'Full Description', attribute: 'description'},
      {heading: 'Code Type', attribute: 'code_type', cloumnClass: 'center'},
      {heading: 'MCC', attribute: 'mcc', dataType: 'boolean', trueValue: 'Yes', falseValue: 'No', cloumnClass: 'center'},
      {heading: 'CC', attribute: 'cc', dataType: 'boolean', trueValue: 'Yes', falseValue: 'No', cloumnClass: 'center'},
      {heading: 'Activation Date', attribute: 'activated', cloumnClass: 'center'},
      {heading: 'Deactivation Date', attribute: 'deactivated', cloumnClass: 'center'}
    ]
  })
</script>

<%= link_to 'New ICD Code', new_icd_code_path %>
